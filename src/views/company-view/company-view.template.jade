include ../../components/offices-list/=offices-list
include ../../components/offices-list/__button/=offices-list__button
include ../../components/offices-list/__item/=offices-list__item

.company-view
  +offices-list
    +offices-list__item({
      ngMods: {
        selected: 'c.selectedOfficeId === office.id'
      },
      attrs: {
        'data-ng-attr-id': "{{ 'office' + office.id }}",
        'data-ng-repeat': 'office in c.offices',
        'data-ng-click': 'c.selectOffice(office)'
      }
    })
      | {{ office.address }}
      br/
      span(data-ng-style="{ color: office.color }") {{ office.status }}
